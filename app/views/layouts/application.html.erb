<!DOCTYPE html>
<html>
  <head>
    <title>Sampleblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded b w">
      <div class="container">
        <a class="navbar-brand" href="/">SampleBlog</a>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <%= link_to "Create new blog", new_blog_path, class: 'nav-link' %>
          </li>
        </ul>
        <ul class="nav navbar-nav pull-xs-right">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "Log out #{current_user.name} ", logout_path, id: "log_out", class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign In", new_session_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container" style="margin-top: 20px;">
      <% if flash[:success] %>
      <div class="alert alert-success" style="margin-top: 70px";><%= flash[:success] %></div>
      <% elsif flash[:error] %>
      <div class="alert alert-danger" style="margin-top: 70px";><%= flash[:error] %></div>
      <% end %>
      <%= yield %>  
    </div>
  </body>
</html>
