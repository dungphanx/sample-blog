<%= render @blog %>
<div class="card">
  <div class="card-block">
    <%= render 'comments/form' %>
  </div>
  
  <% @blog.comments.order('created_at desc').each do |comment| %>
    <div class="card-block">
      <p><%= time_ago_in_words(comment.created_at) %></p>
      <p><%= comment.commenter.name %></p>
      <p><%= comment.content %></p>
    </div>
  <% end %>
</div>