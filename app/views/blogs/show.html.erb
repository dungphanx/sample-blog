<%= render @blog %>
<div class="card">
  <div class="card-block">
    <%= render 'comments/form' %>
  </div>
  
  <div class="card-block">
    <ul class="list-group list-group-flush">
       <% @blog.comments.order('created_at desc').each do |comment| %>
       <li class="list-group-item">
         <p class="card-text">
          <strong><%= comment.commenter.name %>: </strong>
          <%= comment.content %>
        </p>
       </li>
      <% end %>
    </ul>
  </div>
</div>