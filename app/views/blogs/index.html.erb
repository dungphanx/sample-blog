<div class="row">
  <div class="col-md-8">
    <h3>Most recent:</h3>
    <%= render @blogs %>
    <%= paginate @blogs %>
  </div>
  <div class="col-md-4">
    <h3>Top comments blog</h3>
    <% @hots.each do |hot| %>
      <div class="card">
        <div class="card-block">
          <%= link_to hot.first.title, blog_path(hot.first) %>
          <p class="card-text"><small class="text-muted"><%= pluralize(hot.last, 'comment') %></small></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
